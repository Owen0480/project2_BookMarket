<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.repository.mybatis.CustomerMapper">
    <!-- select문 사용 -->
    <select id="findCustomerById"
            parameterType="long"
            resultType="com.springboot.domain.Customer"
    >
        SELECT id, name, phone
        FROM customer
        WHERE id = #{id}
    </select>
    <!-- insert문 사용 -->
    <insert id="insertCustomer" parameterType="com.springboot.domain.Customer" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO customer (name, phone)
        VALUES (#{name}, #{phone})
    </insert>

</mapper>